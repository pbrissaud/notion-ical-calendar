{
	"name": "notion-ical-calendar",
	"version": "1.0.0",
	"description": "Node.js application that connects to a Notion database and exposes calendar events as an iCal feed",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"dev": "dotenv -- tsx watch src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"keywords": ["notion", "ical", "calendar", "ics"],
	"author": "",
	"license": "MIT",
	"engines": {
		"node": ">=20"
	},
	"dependencies": {
		"@notionhq/client": "^2.2.15",
		"ical-generator": "^8.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "24.10.9",
		"dotenv-cli": "11.0.0",
		"tsx": "4.21.0",
		"typescript": "5.9.3",
		"vitest": "2.1.9"
	}
}
